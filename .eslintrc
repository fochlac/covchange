{
  "extends": [
    "standard",
    "prettier",
    "prettier/standard",
    "plugin:jest/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": { "experimentalObjectRestSpread": true }
  },
  "overrides": [
    {
      "files": ["*.spec.js", "**/jest/**/*.js"],
      "env": { "jest": true }
    }
  ]
}
